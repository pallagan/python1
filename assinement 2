basicsalary=int(input('Enter the basicasalary:'))
da=int(input('Enter daily allowance:'))
ta=int(input('Enter travelling allowance:'))
hra=int(input('Enter the house rent:'))
netsalary=basicsalary+da+ta+hra
if netsalary>100000:
    tax=netsalary*10/100
    print(tax)
elif netsalary>50000:
    tax=netsalary*7/100
    print(tax)
elif netsalary>40000:
    tax=netsalary*4/100
    print(tax)
elif netsalary>20000:
    tax=netsalary*2/100
    print(tax)
else:
    print('No tax')
